{
  "name": "@twipped/hooks",
  "version": "0.6.2",
  "description": "A collection of my frequently used react hooks",
  "engines": {
    "node": ">=14.13"
  },
  "type": "module",
  "exports": {
    "./*": {
      "webpack": "./hooks/*.js",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "test": "jest",
    "docs": "rimraf docs && typedoc hooks/*.js --out docs --readme none --hideBreadcrumbs",
    "build": "rimraf dist && npm run build:cjs && npm run build:mjs && npm run build:types",
    "build:cjs": "babel hooks --out-dir dist --out-file-extension .cjs",
    "build:mjs": "ESM=1 babel hooks --out-dir dist --out-file-extension .mjs",
    "build:types": "tsc"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twipped/hooks"
  },
  "author": "Jocelyn Badgley <joc@twipped.com> (http://twipped.com)",
  "license": "MIT",
  "files": [
    "hooks",
    "dist",
    "docs",
    "CHANGELOG.md",
    "LICENSE.txt",
    "README.md"
  ],
  "dependencies": {
    "@twipped/utils": "^7.0.0",
    "date-fns": ">=2.29.3"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=17"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@twipped/eslint-config": "^7.5.2",
    "@twipped/jest-resolver": "^1.0.0",
    "babel-jest": "^29.5.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typedoc": "^0.23.26",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.5",
    "waait": "^1.0.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "@testing-library/jest-dom"
    ],
    "transform": {
      "\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [],
    "resolver": "@twipped/jest-resolver",
    "automock": false,
    "clearMocks": true,
    "collectCoverage": false
  }
}
