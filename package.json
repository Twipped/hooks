{
  "name": "@twipped/hooks",
  "version": "0.5.0",
  "description": "A collection of my frequently used react hooks",
  "engines": {
    "node": ">=14.13"
  },
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./*": "./hooks/*.js"
  },
  "scripts": {
    "lint": "eslint './**/*.{js,jsx}' --fix",
    "test": "jest",
    "doc": "jsdoc -c jsdocs.json",
    "docs": "jsdoc2md -t README.hbs hooks/*.js > README.md",
    "release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twipped/hooks"
  },
  "release": {
    "extends": "@twipped/semrel-config"
  },
  "author": "Jocelyn Badgley <joc@twipped.com> (http://twipped.com)",
  "license": "MIT",
  "files": [
    "hooks",
    "CHANGELOG.md",
    "LICENSE.txt",
    "README.md",
    "index.js"
  ],
  "dependencies": {
    "@twipped/utils": "^6.0.1"
  },
  "peerDependencies": {
    "date-fns": ">=2.28.0",
    "mobx": ">=6.3",
    "mobx-react-lite": ">=3.2.3",
    "prop-types": ">=15",
    "react": ">=17"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@twipped/eslint-config": "^7.3.0",
    "@twipped/jest-resolver": "^1.0.0",
    "babel-jest": "^28.1.3",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-extended": "^3.0.1",
    "jsdoc": "^3.6.11",
    "jsdoc-to-markdown": "~7.1.1",
    "mobx": "^6.6.1",
    "mobx-react-lite": "^3.4.0",
    "react": "^18.2.0",
    "waait": "^1.0.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "@testing-library/jest-dom"
    ],
    "transform": {
      "\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [],
    "resolver": "@twipped/jest-resolver",
    "automock": false,
    "clearMocks": true,
    "collectCoverage": false
  }
}
