{
  // Change this to match your project
  "include": [
    "hooks/*.js"
  ],
  "exclude": [
    "tests/**/*.test.js"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsxdev",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "removeComments": true,
    "esModuleInterop": true
  }
}